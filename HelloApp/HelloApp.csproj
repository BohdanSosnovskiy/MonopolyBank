	  <None Remove="Resources\Images\mastercard_logo.png" />
	  <None Remove="Resources\Images\monopolyhouse_green.png" />
	  <None Remove="Resources\Images\monopolyhouse_red.png" />
	  <None Remove="Resources\Images\nfc_logo.png" />
	  <None Remove="Resources\Images\plus.png" />
	  <None Remove="Resources\Images\user.png" />
	  <None Remove="Resources\Raw\buld.mp3" />
	  <None Remove="Resources\Raw\coindrop.mp3" />
	  <None Remove="Resources\Raw\destroy_buld.mp3" />
	  <None Remove="Resources\Raw\GameOver.mp3" />
	  <None Remove="Resources\Raw\gopstop.mp3" />
	  <None Remove="Resources\Raw\kassa.mp3" />
	  <None Remove="Resources\Raw\policay.mp3" />
	  <None Remove="Resources\Raw\turma.mp3" />
	  <None Remove="Resources\Raw\Win.mp3" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Maui.MediaElement" Version="4.0.1" />
		<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.71" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="8.0.71" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="8.0.0" />
		<PackageReference Include="Plugin.NFC" Version="0.1.26" />
	</ItemGroup>

	<ItemGroup>
	  <MauiXaml Update="GameMainPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="JoinGamePage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="NewGamePage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="PopUpAlert.xaml">
